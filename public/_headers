# Security Headers for Netlify/Vercel
# Content Security Policy (CSP) - SRS 5.4.3
# Place this file in the root of your project

/*
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://api.emailjs.com https://formspree.io; frame-src 'self' https://www.google.com https://www.google.com.pk https://maps.google.com; object-src 'none'; base-uri 'self'; form-action 'self' https://formspree.io; frame-ancestors 'self'; upgrade-insecure-requests
  
  # Strict Transport Security (HTTPS)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Prevent clickjacking (Allow self for framing if needed, but DENY is safer if we don't frame ourselves)
  X-Frame-Options: SAMEORIGIN
  
  # XSS Protection (legacy browsers)
  X-XSS-Protection: 1; mode=block
  
  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=(self), payment=()
  
  # Cross-Origin Policies (Relaxed for Google Maps)
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: cross-origin
  # Cross-Origin-Embedder-Policy: require-corp (Removed as it blocks Google Maps iframes)

# Cache static assets
/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images
/images/*
  Cache-Control: public, max-age=2592000

# Cache fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# HTML - no cache for dynamic content
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

# API routes
/api/*
  Cache-Control: no-store
